<div class='container'>
	<div class="title center">
		Edit Project</div>

	<%= form_for @project do |f| %>
		<%= f.label :title, class: 'label'%>
		<%= f.text_field :title, class: 'input-field' %>

		<%= f.label :description, class: 'label' %>
		<%= f.text_area :description, class:' input-field description-input-field' %>
		
		<% if documentation_exist?(@project) %>
			<span class="label">Previous Documentation - <%= @project.documentation_file_name %> </span>
		<% end %>
		
		<%= f.label :documentation, class: 'label' %>
		<%= f.file_field :documentation %>
		
		<%= f.submit 'Save Changes', class: 'btn btn-submit' %>
	
		<%= link_to 'Delete Project', project_path, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-delete' %>
	<% end %>

</div>