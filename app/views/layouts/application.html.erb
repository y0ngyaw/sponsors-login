<!DOCTYPE html>
<html>
  <head>
    <title>SponsorsLogin</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet"> 
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <div class="nav">
        <div class="logo">
          <%= image_tag "3doc_logo_white.png", alt: "3 Days of Code", class: "logo-img" %>
        </div>
        <% if logged_in? %>
          <%= link_to 'Logout', logout_path, method: 'delete', class: 'link nav-selection' %>
          <% if admin_user? %>
            <%= link_to 'Show All', projects_path, class: 'link nav-selection' %>
            <%= link_to 'New', new_project_path, class: 'link nav-selection' %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="flash">
      <% flash.each do |message_type, message| %>
        <div class='alert alert-<%= message_type %>'><%= message %></div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
